datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model Users {
  id String @id @default(cuid())
  email String
  name String
}

model Household {
    id String @id @default(cuid())
    name String
}

model UserHousehold {
    id String @id @default(cuid())
    user_email String
    household_id String
    admin Boolean
}

model Meal {
    id String @id @default(cuid())
    name String
    description String
    date DateTime
    household_id String
    created_by_email String

    updatedAt DateTime @updatedAt
}

model Invitation {
  id String @id @default(cuid())
  invitee_email String 
  inviter_email String
  household_id String
}